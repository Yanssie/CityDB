extend layout
block navbarcontent
    +nav_item("/New_York","active") Home
    +nav_item("") Menu 1
    +nav_item("/setting") Setting

block content
  h3
    | Welcome! Check your details below:

  p
    table(class="table")
      tr
        td="Username"
        td #{user.username}
      tr
        td="Email"
        td #{user.email}
      tr
        td="First Name"
        td #{user.firstName}
      tr
        td="Last Name"
        td #{user.lastName}

  a(href='/signout', class='text-center new-account') Sign Out
